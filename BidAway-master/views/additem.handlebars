<br>
    <fieldset>
          <legend>Categories</legend>
          <p>
             <label>Select list</label>
             <select id = "category-of-interest" name="category" >
               <option value = "Electronics" selected>Electronics</option>
               <option value = "Furniture">Furniture</option>
               <option value = "Automobile">Automobile</option>
             </select>
          </p>
       </fieldset>
       <script>
            document.getElementById("category-of-interest").value = {{ category }};
        </script>
    <br>
    <label>
      Description
      <input type="text" size=40 name="description"  placeholder="Item Description"  value="{{itemForBid.description}}" class="full-width-input"/>
    </label>
    <br>
    <label>
      Time Period (in Minutes)
      <input type="number" name="time_period"  placeholder="" min="5" value="{{itemForBid.time_period}}" class="full-width-input" step="5"/>
    </label>
    <br>
    <label>
      Starting price ($)
      <input type="number" name="starting_price" placeholder="00.00"   value="{{itemForBid.starting_price}}" class="full-width-input"/>
    </label>
    <br>
       
    

 
    <button type="submit">Submit</button>


 
    
  </form>

 
</article>
