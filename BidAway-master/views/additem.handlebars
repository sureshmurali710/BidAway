<article class="new-post">
  <h1>Make a Item!</h1>
  {{#if hasErrors}}
  
    {{#each errors}}
    <div class="alert alert-danger" role="alert">
 {{this}}
</div>
    
    {{/each}}
 
  {{/if}}
  <form action="/bids" method="POST" class="new-post-form" enctype="multipart/form-data">
    <label>
     Item Name:
      <input type="text" name="item_title" placeholder="item name" value="{{itemForBid.item_title}}" class="full-width-input"/>
    </label>
    
    
    <br>
   <label>Upload an image:
       <input name="itemImage" type="file" id="takePictureField" accept="image/*" />
   </label>
